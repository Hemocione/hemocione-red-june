---
interface Props {
  size?: "small" | "medium";
  type?: "primary" | "secondary" | "plain";
  className?: string;
}

const { type = "primary", size, className = "" } = Astro.props;
---

<button class:list={[type, size, className]}>
  <slot />
</button>

<style>
  button {
    padding: 1rem 3rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    border: 1px solid transparent;
    transition:
      background-color 0.2s,
      border-color 0.2s;
  }

  .secondary {
    background-color: var(--hemo-color-secondary);
    color: var(--hemo-color-text-secondary);
  }

  .secondary:hover {
    background-color: var(--hemo-color-secondary-dark);
  }

  .primary {
    background-color: var(--hemo-color-primary);
    color: white;
  }

  .primary:hover {
    background-color: var(--hemo-color-primary-dark);
  }

  .plain {
    background-color: transparent;
    border: 1px solid var(--hemo-color-primary);
  }

  .plain:hover {
    background-color: var(--hemo-color-secondary);
  }

  .small {
    padding: 0.5rem 1.5rem;
    font-size: 1rem;
  }
</style>
