<style>
  .baixe-app {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    padding: 3rem 1rem;
  }

  .baixe-app__content {
    min-width: 300px;
    max-width: 420px;
  }

  .baixe-app__content h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.2rem;
  }

  .baixe-app__benefits {
    list-style: none;
    padding: 1rem 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
  }

  .baixe-app__benefits li {
    display: flex;
    align-items: center;
    font-size: 1.1rem;
    color: #222;
    gap: 0.7rem;
  }

  .check-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
  }

  .baixe-app__badges {
    display: flex;
    gap: 1.2rem;
    margin-top: 1.5rem;
  }

  .baixe-app__badges img {
    height: 44px;
    width: auto;
    display: block;
  }

  .baixe-app__hero {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 300px;
  }

  .baixe-app__hero img {
    max-width: 340px;
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .baixe-app {
      flex-direction: column-reverse;
      align-items: flex-start;
      gap: 2rem;
    }
    .baixe-app__content {
      max-width: 100%;
      text-align: left;
    }
    .baixe-app__benefits {
      align-items: flex-start;
      margin: 0;
      padding: 1rem 0;
      width: fit-content;
    }
    .baixe-app__badges {
      justify-content: flex-start;
    }
    .baixe-app__hero {
      margin-bottom: 1.5rem;
    }
  }
</style>
