---
import Button from "../Button.astro";
import { config } from "../../utils/environment";
---

<section>
    <div class="container">
        <aside>
            <h2>Venha fazer parte do nosso movimento</h2>
            <p>Colabore com o Hemocione e ajude a salvar ainda mais vidas</p>
        </aside>
        <aside>
            <a href={config.hemocioneDonation} target="_blank">
                <Button type="secondary">Seja um Irm√£o de Sangue</Button>
            </a>
        </aside>
    </div>
</section>

<style>
    section {
        background-color: var(--hemo-color-primary);
        color: var(--hemo-color-text-primary);
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        padding: 2rem 0;
    }

    h2 {
        margin: 0 0 1rem 0;
    }

    aside:first-child {
        flex: 1;
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column;
            padding: 2rem 1rem;
        }

        aside {
            text-align: center;
            width: 100%;
            display: flex;
            flex-direction: column;
        }
    }
</style>
