---
import Button from "../Button.astro";
---

<section class="bloco-30min">
  <div class="bloco-30min-icon">
    <!-- Ícone ilustrativo (substitua pelo SVG real depois) -->
    <img src="/ampulheta.png" alt="Ícone 30 minutos" />
  </div>
  <h2>
    30 minutos é o tempo que leva para <strong>salvar até 4 vidas</strong>
  </h2>
  <a href="https://ondedoar.hemocione.com.br/" target="_blank">
    <Button type="secondary" size="medium">Saiba onde doar</Button>
  </a>
</section>

<style>
  .bloco-30min {
    background: #d32d2f;
    color: #fff;
    border-radius: 1rem;
    padding: 2rem 1.5rem;
    margin: 2.5rem 0;
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  .bloco-30min-content {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    font-size: 1.2rem;
  }
  .bloco-30min-icon img {
    height: 100px;
  }
  .bloco-30min strong {
    font-weight: 700;
  }

  .bloco-30min h2 {
    font-weight: 500;
  }

  .bloco-30min a {
    margin-left: auto;
  }
  @media (max-width: 700px) {
    .bloco-30min {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1.5rem;
    }
    .bloco-30min-content {
      font-size: 1rem;
    }
    .bloco-30min a {
      margin-left: 0;
      margin-top: auto;
    }
  }
</style>
